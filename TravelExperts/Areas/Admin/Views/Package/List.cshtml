@model List<Package>
@{ ViewData["Title"] = "Package List"; }
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

    // ----------------------------- PACKAGE VIEW FROM ADMIN -------------------------- //
    // ----------------------------- to view Agent List Table ------------------------- //
*@


@*// ----------------------------- Heading for Package List page ---------------------------------- //*@

<h1 class="display-4">Package List</h1>

@*// --------------------------- Button for Adding new Package ------------------------------------ //*@

<h5 class="mt-1"><a asp-action="Add" class="btn btn-primary">Add a Package</a></h5>


@*// --------------------------------- Table for Package List ------------------------------------ //*@

<div class="text-center">

    <table class="table table-bordered table-striped table-md">

        @*// ----------------------------- Package Table Header ---------------------------------- //*@

        <thead>
            <tr>
                <th scope="col">Package ID</th>
                <th scope="col">Package Name</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Description</th>
                <th scope="col">Base Price</th>
                <th scope="col">Agency Commission</th>
            </tr>
        </thead>

        @*// ----------------------------- Package Table Body ---------------------------------- //*@

        <tbody>

            @*// ----------------------------- Using data from Package Model ---------------------------------- //*@

            @foreach (var package in Model)
            {
                <tr>
                    <td>@package.PackageId</td>
                    <td>@package.PkgName</td>
                    <td>@package.PkgStartDate</td>
                    <td>@package.PkgEndDate</td>
                    <td>@package.PkgDesc</td>
                    <td>$@package.PkgBasePrice</td>
                    <td>$@package.PkgAgencyCommission</td>

                    @*// ----------------------------- Edit button in Package List Table ---------------------------------- //*@

                    <td>
                        <a asp-controller="Package" asp-action="Edit" asp-route-id="@package.PackageId" class="btn btn-primary">Edit</a>
                    </td>

                    @*// ----------------------------- Delete button in Package List Table ---------------------------------- //*@

                    <td>    
                        <a asp-controller="Package" asp-action="Delete" asp-route-id="@package.PackageId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
