@model Agent

@{  // ------------------------------ AGENT VIEW FROM ADMIN -------------------------- //
    // --------------------------- Used for add, edit, and delete --------------------- //
    // ----------- Which one is determined by the "action" method name. --------------- //

    var action = ViewContext.RouteData.Values["action"].ToString().Capitalize();

    ViewData["Title"] = $" | {action} Agent"; }


@*// ----------------------------- Heading for Package Form page ---------------------------------- //*@

<h1>@action Agent</h1>


@*// --------------------------- Form for Adding / Editing Agent Data --------------------------- //*@

<form asp-action="@action" asp-area="Admin" method="post">

    <input type="hidden" asp-for="AgentId" />

    @*// --------------------------- Textbox for Agent Name ------------------------------------ //*@

    <div class="form-group row">
        <div class="col-sm-2"><label>Agent Name:</label></div>

        @*// -------If deleting, display title in a label and put value in hidden field for delete message-------- //*@
        @*// -------Otherwise, provide a text box ---------------------------------------------------------------- //*@

        @if (Operation.IsDelete(action))
        {
            <div class="col-sm-4"><label>@Model.AgtFirstName </label></div>
                <input type="hidden" asp-for="AgtFirstName" /> 
         }
         else
         {
            <div class="col-sm-4">
                <input type="text" asp-for="AgtFirstName" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="AgtFirstName" class="text-danger"></span>
            </div>
         }
    </div>


    @*// -------If not deleting, display form for adding / editing Agent List-------- //*@
    @if (!Operation.IsDelete(action))
    {
        @*// -------------------- Textbox for Agent Contact Number -------------------- //*@

        <div class="form-group row">
            <div class="col-sm-2"><label>Contact Number:</label></div>
            <div class="col-sm-4">
                <input type="text" asp-for="AgtBusPhone" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="AgtBusPhone" class="text-danger"></span>
            </div>
        </div>

                @*// --------------------------- Textbox for Agent Email --------------------------- //*@

                <div class="form-group row">
                    <div class="col-sm-2"><label>Email:</label></div>
                    <div class="col-sm-4">
                        <input type="text" asp-for="AgtEmail" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <span asp-validation-for="AgtEmail" class="text-danger"></span>
                    </div>
                </div>

                                @*// --------------------------- Textbox for Agent Position --------------------------- //*@

                                <div class="form-group row">
                                    <div class="col-sm-2"><label>Position:</label></div>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="AgtPosition" class="form-control" />
                                    </div>
                                    <div class="col-sm-6">
                                        <span asp-validation-for="AgtPosition" class="text-danger"></span>
                                    </div>
                                </div>

                                                @*// --------------------------- Textbox for Agency ID --------------------------- //*@

                                                <div class="form-group row">
                                                    <div class="col-sm-2"><label>Agency ID:</label></div>
                                                    <div class="col-sm-4">
                                                        <input type="text" asp-for="AgencyId" class="form-control" />
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <span asp-validation-for="AgencyId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                }

    @*// ---------------------------- Action Button for the form ---------------------------------- //*@

    <div class="row">
        <div class="col-sm-4 offset-sm-2">
            <button type="submit" class="btn btn-primary">@action</button>

            @*// -------Return user to main admin page after add or to search page otherwise-------- //*@

            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
