@model List<Agency>
@{ ViewData["Title"] = "Agency List"; }
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

    // ------------------------------ AGENCY VIEW FROM ADMIN -------------------------- //
    // ----------------------------- to view Agency List Table ------------------------ //
*@


@*// ----------------------------- Heading for Agency List page ---------------------------------- //*@

<h1 class="display-4">Agency List</h1>

@*// --------------------------- Button for Adding new Agency ------------------------------------ //*@

<h5 class="mt-1"><a asp-action="Add" class="btn btn-primary">Add an Agency</a></h5>


@*// --------------------------------- Table for Agency List ------------------------------------- //*@

<div class="text-center">

    <table class="table table-bordered table-striped table-md">

        @*// ----------------------------- Agency Table Header ---------------------------------- //*@

        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">City</th>
                <th scope="col">Address</th>
                <th scope="col">Province</th>
                <th scope="col">Country</th>
                <th scope="col">Contact Number</th>
            </tr>
        </thead>

        @*// ----------------------------- Agency Table Body ---------------------------------------- //*@

        <tbody>

            @*// ----------------------------- Using data from Agency Model ---------------------------------- //*@
            
            @foreach (Agency agency in Model)
            {
                <tr>
                    <td>@agency.AgencyId </td>
                    <td>@agency.AgncyCity</td>
                    <td>@agency.AgncyAddress</td>
                    <td>@agency.AgncyProv </td>
                    <td>@agency.AgncyCountry </td>
                    <td>@agency.AgncyPhone </td>

                    @*// ----------------------------- Edit button in Agency List Table ---------------------------------- //*@

                    <td>
                        <a asp-controller="Agency" asp-action="Edit" asp-route-id="@agency.AgencyId" class="btn btn-primary">Edit</a>
                    </td>

                    @*// ----------------------------- Delete button in Agency List Table ---------------------------------- //*@

                    <td>
                        <a asp-controller="Agency" asp-action="Delete" asp-route-id="@agency.AgencyId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
